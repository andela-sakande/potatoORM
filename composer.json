{
    "name": "sirolad/potato-orm",
    "description": "A basic CRUD Object Relational Mapper",
    "type": "Library",
    "license": "MIT",
    "keywords": [
        "orm",
        "database",
        "php"
    ],
    "homepage": "https://github.com/andela-sakande/potatoORM",
    "authors": [
        {
            "name": "Surajudeen Akande",
            "email": "surajudeen.akande@andela.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "vlucas/phpdotenv": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0.7",
        "Mockery/Mockery": "~0.9.4"
    },
    "autoload":{
        "psr-4": {
            "Sirolad\\Potato\\": "src/"
        },
        "classmap": ["src/"]
    },
    "autoload-dev":{
        "psr-4": {
            "Sirolad\\Potato\\Test": "tests/"
        },
        "classmap": ["tests/"]
    },
    "scripts": {
       "test": "phpunit"
   },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org/packages/sirolad/potatoORM"
        },
        {
            "type": "vcs",
            "url": "https://github.com/andela-sakande/potatoORM"
        }
    ]
}
